  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "chptr",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-plugins"
    ]
  },
  "repository": "spikying/chptr",
  "scripts": {
    "postpack": "rimraf oclif.manifest.json",
    "prepack": "tsc -b -v && oclif-dev manifest && oclif-dev readme",
    "test": "echo NO TEST",
    "version": "oclif-dev readme && git add README.md",
    "testadd": "DEBUG='command:add' ./bin/run.cmd add --path='../testNovel'",
    "testantidote": "DEBUG='command:antidote' ./bin/run.cmd antidote --path='../testNovel'",
    "testbuild": "DEBUG='command:build' ./bin/run.cmd build --path='../testNovel'",
    "testdelete": "DEBUG='command:delete' ./bin/run.cmd delete --path='../testNovel'",
    "testedit": "DEBUG='command:edit' ./bin/run.cmd edit --path='../testNovel'",
    "testinit": "DEBUG='command:init' ./bin/run.cmd init --path='../testNovel'",
    "testrename": "DEBUG='command:rename' ./bin/run.cmd rename --path='../testNovel'",
    "testreorder": "DEBUG='command:reorder' ./bin/run.cmd reorder --path='../testNovel'",
    "testsave": "DEBUG='command:save' ./bin/run.cmd save --path='../testNovel'",
    "testsplit": "DEBUG='command:split' ./bin/run.cmd split --path='../testNovel'",
    "testtrack": "DEBUG='command:track' ./bin/run.cmd track --path='../testNovel'",
    "buildstandalone": "pkg ."
  },
  "types": "lib/index.d.ts"
}
